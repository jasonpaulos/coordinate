{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "make",
      "program": "${workspaceFolder}/bin/coordinate",
      "args": ["--host", "localhost:8000", "./examples/test/bin/test"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }, {
          "description": "Set follow fork mode to child",
          "text": "-gdb-set follow-fork-mode child"
        }
      ]
    },
    {
      "name": "(gdb) Remote Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/coordinate",
      "args": ["--host", "localhost:8000"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerServerAddress": "localhost:26100"
    },
    {
      "name": "(gdb) Launch test",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "make",
      "program": "${workspaceFolder}/examples/test/bin/test",

      "args": ["<", "${workspaceFolder}/examples/test/input"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
